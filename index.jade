doctype 5
html(lang="en")
	head
		title ProtoBowl#{name}
		meta(charset="utf8")
		style
			body {
				font-family: sans-serif;
			}
			a#new {
				text-decoration: none
			}
			#unread {
				visibility: hidden;
			}
			#name, .title {
				display: inline;
			}
			#question {
				margin-left: 40px;
			}
			.unselectable {
				-webkit-user-select: none;
				user-select: none;
				-moz-user-select: none;
				cursor: default;
			}
			.warning {
				font-style: italic;
			}
			hr {
				border-style: solid;
				border-top-width: 0;
			}

			#countdown, #reveal {
				font-size: 32px;
				font-family: monospace;
			}
			#countdown {
				font-weight: bold;
				color: red;
				float: right;
			}

			#disco {
				display: none;
			}

			#answer {
				text-align: right;
				font-style: italic;
			}
		script(src="/socket.io/socket.io.js")
		script
			channel_name = '!{name}'
			initial_sync = !{initial}
	body
		a#new(href="/")
			h1.title Prototype Quizbowl Application
		
		div#disco
			| Hmm, it looks like you got disconnected. Try reloading.

		h2#name= name
		p.warning 
			strong press enter to buzz 
			| and please excuse the hideous interface

		hr 

		p#question
			span#visible
			span#unread

		p#answer

		hr

		span#reveal 
		span#countdown 

		script(src="client.js")